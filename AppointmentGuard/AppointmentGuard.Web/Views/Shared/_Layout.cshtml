<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppointmentGuard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">APPOINTMENT<span style="color:white">GUARD</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        @{
                            var token = Context.Request.Cookies["AppointmentGuardToken"];
                        }

                        @if (!string.IsNullOrEmpty(token))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="Index">Randevularım</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(token))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="javascript:void(0);" onclick="confirmLogout()">ÇIKIŞ YAP</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content pb-3 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white mt-auto" style="border-color: var(--neon-blue) !important; background-color: rgba(0,0,0,0.9);">
        <div class="container text-center">
            &copy; 2026 - <span style="color: var(--neon-blue); font-weight: bold;">AppointmentGuard</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function confirmLogout() {
            Swal.fire({
                title: 'Çıkış Yap',
                text: "Oturumu kapatmak istediğinize emin misiniz?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Çıkış Yap',
                cancelButtonText: 'İptal',
                background: '#1a1a1a',
                color: '#fff'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Auth/Logout";
                }
            })
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
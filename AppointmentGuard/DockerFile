FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY . .

RUN dotnet restore "AppointmentGuard.API/AppointmentGuard.API.csproj"
RUN dotnet publish "AppointmentGuard.API/AppointmentGuard.API.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/publish .

EXPOSE 8080

ENTRYPOINT ["dotnet", "AppointmentGuard.API.dll"]